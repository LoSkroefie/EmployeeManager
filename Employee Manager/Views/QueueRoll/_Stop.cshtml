        <td>
            <h2>@ViewData["Title"]</h2>
            <h3>@ViewData["Message"]</h3>
        </td>
        <td><div align="right"><img src="file:///C|/Users/jvrso/Desktop/Buttons/Group%201.png" width="64" height="64"></div></td>
    </tr>
</table>
