@model EmployeeManager.Models.TaskModel
@{
    ViewData["Title"] = "Edit Task";
}



<style>
    input[type=text], select {
        width: 100%;
        padding: 12px 20px;
        margin: 8px 0;
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    input[type=submit] {
        width: 100%;
        background-color: #4CAF50;
        color: white;
        padding: 14px 20px;
        margin: 8px 0;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        input[type=submit]:hover {
            background-color: #45a049;
        }

    div {
        border-radius: 5px;
        background-color: #f2f2f2;
        padding: 20px;
    }
</style>
<script type="text/javascript">
    $(function () {
        $(".date-picker").datepicker({
            dateFormat: 'dd-M-yy'
        });

    });

</script>
<table width="100%">
    <tr>
        <td>

            <h3>@ViewData["Title"]</h3>
            <Strong>@ViewData["Message"]</Strong><br />
            <small>@ViewData["TaskID"] - @ViewData["Created"]</small>
        </td>
        <td></td>
    </tr>
</table>
<hr />
@using (Html.BeginForm("EditTask", "Task", FormMethod.Post))
{
    @Html.HiddenFor(m => m.TaskId)
    @Html.HiddenFor(m => m.DateCreated)
    @Html.HiddenFor(m => m.Status)
    <table width="100%" cellpadding="2" cellspacing="5">

        <tr>
            <td colspan="2">
                <strong>Title</strong><br />
                @Html.TextBoxFor(m => m.Title,
new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
        <tr>
            <td><strong>Description</strong></td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td colspan="2">
                @Html.TextAreaFor(m => m.Description, 10, 100,
        new { htmlAttributes = new { @class = "form-control" } })
            </td>
        </tr>
    </table>
    <p>
        <input type="submit" name="Submit" value="Save Task">
    </p>

}


